<!-- Include Head -->
<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<%- include('./partials/header') %>
			<!-- /Header -->

			<!-- Banner -->
			<div class="banner">
				<img src="" alt="">
			</div>
			<!-- /Banner -->

			<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Productos</h2>
					</div>
					<!-- Show the "ultimos" products -->


					<% if (habilitado) { %>
						<% for( let i=0; i < listado.length; i++ ) { %>
							<div class="col-12 col-sm-6 col-lg-3">
								<section class="product-box">
									<a href="/products/id/<%= listado[i].id %>">
										<figure class="product-box_image">
											<img src="<%= listado[i].imagen %>" alt="">
										</figure>
										<article class="product-box_data">
											<h2>
												<%= listado[i].nombre %>
											</h2>
											<p>
												<%= listado[i].descripcion %>
											</p>

										</article>
									</a>
								</section>
							</div>
							<% } %>
								<% } else { %>

									<i>Las remeras no estan habilitados por ahora</i>

									<% } %>


				</div>
			</div>
			<!-- /Footer -->
			<%- include('./partials/footer') %>
				<!-- /Footer -->