
<%- include('./partials/head') %>
<%- include('./partials/header') %>

	<div class="container products-wrapper">
		
		<div class="row">
		
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<div class="col-12 col-md-6 offset-md-3">
				<form action="/profile" method="GET" class="register-form-r">
					<div class="form-group-r">
						<label for="email">Email:</label>
						<input type="email" id="email" name="email" class="form-control-r" required>
					</div>
					
					<div class="form-group-r">
						<label for="name">Usuario:</label>
						<input type="text" id="name" name="name" class="form-control-r" required>
					</div>
					
					<div class="form-group-r">
						<label for="password">Contraseña:</label>
						<input type="password" id="password" name="password" class="form-control-r" required>
					</div>
					
					<div class="form-group-r">
						<label for="birthDate">Fecha de Nacimiento:</label>
						<input type="date" id="birthDate" name="birthDate" class="form-control-r" required>
					</div>
					
					<div class="form-group-r">
						<label for="document">Número de Documento:</label>
						<input type="number" id="document" name="document" class="form-control-r" required>
					</div>
					
					<div class="form-group-r">
						<label for="profilePicture">Foto de Perfil:</label>
						<input type="text" id="profilePicture" name="profilePicture" class="form-control-r" required >
					</div>
					<section class="botonreseteo">
					<button type="submit" class="botonregistrame" required>Registrarse</button>
				</section>
				</form>
			</div>
		</div>
	</div>

<%- include('./partials/footer') %>