<%- include('./partials/head') %>
  <% if (user) { %>
    <%- include('./partials/headerLogueado') %>
  <% } else { %>
    <%- include('./partials/header') %>
  <% } %>
   

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Resultados de b√∫squeda</h2>
        </div>

        <% if (mensaje) { %>
            <div class="col-12">
                <p><%= mensaje %></p>
            </div>
        <% } else { %>
            <% for (let i = 0; i < listado.length; i++) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/products/id/<%= listado[i].id %>">
                            <figure class="product-box_image">
                                <img src="<%= listado[i].imagen %>" alt="">
                            </figure>
                            <article class="product-box_data">
                                <h2><%= listado[i].nombre %></h2>
                                <p><%= listado[i].descripcion %></p>
                                <p>Publicado por: 
                                    <a href="/users/<%= listado[i].usuario.id %>">
                                        <%= listado[i].usuario.email %>
                                    </a>
                                </p>
                            </article>
                        </a>
                    </section>
                </div>
            <% } %>
        <% } %>
    </div>
</div>

<%- include('./partials/footer') %>